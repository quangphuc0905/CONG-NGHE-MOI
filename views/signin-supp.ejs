<!DOCTYPE html>
<head>

<link rel="stylesheet" href="css/style-sign.css"/>
<!------ Include the above in your HEAD tag ---------->
</head>
<body>
<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <h2>Đăng nhập</h2>
    </div>

    <!-- Login Form -->
    <form action="/admin/signinn" method="POST">
      <input type="text" id="login" class="fadeIn second" name="username" placeholder="login" style="width:80%; text-align: left;">
      <input type="text" id="password" class="fadeIn third" name="pass" placeholder="password" style="width:80%; text-align: left">
      <input type="submit" class="fadeIn fourth" value="Log In">
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <a class="underlineHover" href="#">Forgot Password?</a>
    </div>

  </div>
</div>
</body>